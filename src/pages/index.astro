        .search-controls {
          order: -1; /* move above counter */
        }

        #champion-count {
          text-align: left;
          width: 100%;
        }

        #search-bar {
          flex-grow: 1;
          width: auto;
        }

        #clear-all-button {
          margin-left: 8px;
          flex-shrink: 0;
        }
      }
    </style>
